<div class="row">
    {{#each news}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex-justify-content-between align-items-center">{{title}} <a href="edit/{{_id}}"> <i class="fas fa-pencil-alt"></i> </a></h4>
                <p>{{subtitle}}</p>
                <hr>
                <p>{{category}}</p>
                <hr>
                <p>{{author}}</p>
                <hr>
                <p>{{date}}</p>
                <hr>
                <p>{{description}}</p>
        
                <form action="/news/delete/{{_id}}?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <button class="btn btn-outline-danger btn-block btn-sm" type="submit">
                    Delete
                </button>
                </form>
                
            </div>
        </div>
    </div>
    {{else}}
        <p class="lead" style="color: white;">There are not news to show at this moment!!!</p>
    {{/each}}
</div>